@model Day3Assign.Models.Product;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
	<form action="Create" method="post" class="card p-4 pt-3 w-60 m-auto shadow-sm">
		<h4 class="font-weight-bolder mb-3">
			Create New Product
		</h4>
		<div class="form-group">
			<label for="name">Product Name</label>
			<input type="text" class="form-control font-weight-bold" id="name" name="pname">
			@if (!ViewData.ModelState.IsValid)
			{
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			@Html.ValidationMessage("pname")
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
			}
		</div>
		<div class="form-group">
			<label for="pid1">Product ID</label>
			<input type="text" class="form-control font-weight-bold" id="pid1" name="pid">
			@if (!ViewData.ModelState.IsValid)
			{
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			@Html.ValidationMessage("pid")
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
			}
		</div>

		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="price1">Price</label>
				<input type="number" class="form-control font-weight-bold" id="price1" name="price">
				@if (!ViewData.ModelState.IsValid)
				{
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				@Html.ValidationMessage("price")
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
				}
			</div>
			<div class="form-group col-md-6">
				<label for="stock1">Stock</label>
				<input type="number" class="form-control font-weight-bold" id="stock1" name="stock">
				@if (!ViewData.ModelState.IsValid)
				{
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				@Html.ValidationMessage("stock")
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
				}
			</div>
		</div>

		<button type="submit" class="btn btn-primary">Create</button>
	</form>


